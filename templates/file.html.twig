{% extends "base.html.twig" %}

{% block content %}

    <table class="table table-bordered table-hover">
        <tr>
        <tr><td class="textboldleft">Name</td><td>{{ file.getName() }} <br>
                {% if file.isMedia() %}
                    Length: {{ length }}, Bitrate: {{ bitrate/1024 }}kbps
                {% endif %}
            </td></tr>
        <tr><td class="textboldleft">Size</td><td>{{ size }} KB
            </td></tr>
        <tr><td class="textboldleft">Date of upload</td><td>{{ file.getUploadTime() }}
            </td></tr>
    </table>
    <div>
        {% if file.isImage() %}
            <img class="leftmargin" height="200" src="{{ imagePath }}">
        {% endif %}
    </div>
    <a href="/download/{{ file.getId() }}" class="btn btn-success leftmargin"> Download </a>

{% endblock %}